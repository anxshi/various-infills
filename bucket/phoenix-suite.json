{
    "##": "experimental",
    "version": "2025.10.12.1",
    "description": "Phoenix is a suite of configurations & advanced modifications for Mozilla Firefox, designed to put the user first - with a focus on privacy, security, freedom, & usability.",
    "homepage": "https://phoenix.celenity.dev/",
    "license": "GPL-3.0-or-later",
    "suggest": {
        "firefox-eme-free": ["extras/firefox-eme-free"]
    },
    "url": "https://github.com/celenityy/Phoenix/archive/refs/tags/2025.10.03.1.zip",
    "extract_dir": "Phoenix-2025.10.03.1\\windows",
    "pre_install": [
        "if (!(installed firefox-eme-free)) {",
        "abort '`nNo Firefox Installation Found!'",
        "} else {",
        " info 'Firefox Installation Found'",
        "}"
    ],
    "post_install": [
        "$firefoxPath = $(appdir firefox-eme-free)\\current",
        "Copy-Item -Path \"$dir\\phoenix.cfg\" -Destination \"$firefoxPath\" -Force",
        "Copy-Item -Path \"$dir\\defaults\\pref\\phoenix.js\" -Destination \"$firefoxPath\\defaults\\pref\" -Force",
        "Copy-Item -Path \"$dir\\distribution\\policies.json\" -Destination \"$firefoxPath\\distribution\" -Force"
    ],
    "pre_uninstall": [
        "$firefoxPath = $(appdir firefox-eme-free)",
        "Remove-Item \"$firefoxPath\\phoenix.cfg\" -Force",
        "Remove-Item \"$firefoxPath\\defaults\\pref\\phoenix.js\" -Force",
        "Remove-Item \"$firefoxPath\\distribution\\policies.json\" -Force"
    ],
    "checkver": {
        "github": "https://github.com/celenityy/Phoenix"
    },
    "autoupdate": {
        "url": "https://github.com/celenityy/Phoenix/archive/refs/tags/$version.zip",
        "extract_dir": "Phoenix-$version\\windows"
    }
}
